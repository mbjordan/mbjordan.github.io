extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h2= page.title
  p.author
    | Written
    span= " " + moment.utc(page.metadata.date).format('MMM DD, YYYY') + " "
    | by #{page.__env.locals.owner}



block content
  article.article
    section.content!= typogr(page.html).typogrify()

