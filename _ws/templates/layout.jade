doctype html
block vars
    - var bodyclass = null;
html(lang='en')
  head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
      block head
      title
          block title
              = locals.name
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
      link(rel='stylesheet', href='/css/main.min.css')
  body

      aside
          h1
              a(href=locals.url)= locals.name
          p.description= locals.description

          .footer
              block footer
                  p &copy; #{ new Date().getFullYear() } 
                      a(href=locals.twitter)= locals.owner
                      | &nbsp;|&nbsp;
                      a(href="/articles/about.html") About

      #content
          block header
          block content

      .footer
          block footer
              p &copy; #{ new Date().getFullYear() } 
                  a(href=locals.twitter)= locals.owner
                  | &nbsp;|&nbsp;
                  a(href="/articles/about.html") About
